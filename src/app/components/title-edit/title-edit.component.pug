.view-mode(
  *ngIf="!view.mode",
  (click)="toggleMode()"
)
  ng-content
.edit-mode(
  [hidden]="!view.mode",
)
  form([formGroup]="formCreateList", (ngSubmit)="submitForm($event)")
    .form-group
      label
        input.form-control(
          type="text",
          formControlName="title"
          placeholder="Add list...",
          #title
          required
        )
